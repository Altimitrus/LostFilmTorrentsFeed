@model LostFilmMonitoring.BLL.Models.RegistrationViewModel

<style>
    .item-name {
        color: green;
    }
    .item-quality {
        color: darkblue;
        padding-left: 5px;
    }
    .item-remove {
        color:orangered; 
        padding-left:5px;
        font-weight: bold;
        cursor: pointer;
    }
    .serial-item:checked + .serial-item-label {
        font-weight: bold;
        color:red;
    }
    .serial {
        height: 250px;
        margin: 3px;
        overflow: hidden;
        border: 1px solid white;
        cursor: pointer;
        text-align: center;
    }

    .serial-header {
        height: 40px;
    }

    .serial-selected {
        background-color: aquamarine;
        border: 1px solid green;
    }

    .hidden {
        display:none;
    }
    .col-md-2 {
        padding: 0;
    }

</style>

<div class="row">
    <input type="hidden" asp-for="UserId" />
    <div class="col-md-12">
        <h2>Создайте ваш персональный RSS Torrent Feed с сайта LostFilm.TV</h2>
        @foreach (var item in Model.AllSerials)
        {
            var selected = Model.SelectedItems?.FirstOrDefault(i => i.Serial == item.Name);
            var quality = selected?.Quality;
            <div class="col-md-2">
                <div class="serial @(selected != null ? "serial-selected" : "")" onclick="check(this)">
                    <input type="hidden" name="@item.Name" value="@(selected != null)" />
                    <div class="serial-header">@item.Title</div>
                    <img src="~/images/serials/@($"{item.Escaped}.jpg")" />
                    <div style="padding-top: 15px;">
                        @Html.DropDownList(
                            item.Name + "_quality",
                            new SelectList(new[] { "SD", "1080", "MP4" }, quality),
                            null,
                            new {
                                @class = selected != null ? "" : "hidden",
                                onclick = "window.event.stopPropagation();"
                            })
                        <a target="_blank" onclick = "window.event.stopPropagation();" href="https://www.google.by/search?q=Сериал @item.Title трейлер">i</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-md-12">
        <label asp-for="Cookie">Значение Куки</label>
        <input type="text" asp-for="Cookie" />
        <input type="button" value="Отправить" onclick="submit()" />
    </div>

    @section Scripts {
        <script>
            var check = function (div) {
                var hidden = div.getElementsByTagName('input')[0];
                var select = div.getElementsByTagName('select')[0];
                if (hidden.value !== "") {
                    div.classList.remove("serial-selected");
                    select.classList.add("hidden");
                    hidden.value = "";
                } else {
                    div.classList.add("serial-selected");
                    select.classList.remove("hidden");
                    hidden.value = "value";
                }
            }
            var submit = function () {
                var data = {
                    Cookie: $('#Cookie').val(),
                    UserId: $('#UserId').val(),
                    SelectedItems: new Array()
                }
                var hiddens = $('.serial').find('input[type=hidden]:first');
                for (var i = 0; i < hiddens.length; i++) {
                    if (hiddens[i].value === "") continue;
                    data.SelectedItems.push(
                        {
                            Serial: hiddens[i].name,
                            Quality: document.getElementsByName(hiddens[i].name + "_quality")[0].value
                        }
                    );
                }
                $.post("/", data)
                    .done(function (data) {
                        if (data != "") {
                            window.location.href = '/' + data;
                        }
                    });
            }
        </script>
    }